<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<tools>
	<tool id="1" label="LaTeX → PDF" description="Create a PDF from LaTeX source" extensions=".tex">
		<job mustSucceed="true" postProcessor="RubberPostProcessor">
			rubber --inplace --maxerr -1 --pdf --short --force --warn all &quot;$filename&quot;
		</job>
		<job mustSucceed="true" postProcessor="GenericPostProcessor">
			gnome-open &quot;$shortname.pdf&quot;
		</job>
	</tool>
	<tool id="2" label="Cleanup LaTeX Build" description="Remove LaTeX build files" extensions=".tex">
		<job mustSucceed="true" postProcessor="GenericPostProcessor">
			rm -f $directory/*.aux $directory/*.log $directory/*.toc $directory/*.bbl $directory/*.blg
		</job>
	</tool>
	<tool id="3" label="BibTeX → XML" description="Convert BibTeX to XML" extensions=".bib">
		<job mustSucceed="true" postProcessor="GenericPostProcessor">
			bibtex2xml &quot;$filename&quot;
		</job>
	</tool>
</tools>